<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Set up FAQ accordion functionality
        const questionElements = document.querySelectorAll('.faq-question');
        
        questionElements.forEach(question => {
            question.addEventListener('click', function() {
                const faqItem = this.parentElement;
                
                // Toggle active class on current item
                faqItem.classList.toggle('active');
                
                // Optional: Close other items when opening one
                if (faqItem.classList.contains('active')) {
                    questionElements.forEach(otherQuestion => {
                        if (otherQuestion !== question) {
                            otherQuestion.parentElement.classList.remove('active');
                        }
                    });
                }
            });
        });
    });
    
    // Search functionality
    function searchFAQ() {
        const searchText = document.getElementById('faqSearch').value.toLowerCase();
        const faqItems = document.querySelectorAll('.faq-item');
        const notFoundElement = document.querySelector('.faq-not-found');
        
        let foundItems = false;
        
        faqItems.forEach(item => {
            const question = item.querySelector('.faq-question h3').textContent.toLowerCase();
            const answer = item.querySelector('.faq-answer').textContent.toLowerCase();
            
            if ((question.includes(searchText) || answer.includes(searchText)) && 
                !item.classList.contains('filtered-out')) {
                item.style.display = '';
                foundItems = true;
            } else {
                item.style.display = 'none';
            }
        });
        
        // Show or hide "not found" message
        if (foundItems) {
            notFoundElement.classList.add('hidden');
        } else {
            notFoundElement.classList.remove('hidden');
        }
    }
    
    // Filter by category
    function filterCategory(category) {
        // Update active button
        document.querySelectorAll('.category-btn').forEach(btn => {
            btn.classList.remove('active');
        });
        event.target.classList.add('active');
        
        // Filter items
        const faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(item => {
            if (category === 'all' || item.dataset.category === category) {
                item.classList.remove('filtered-out');
                item.style.display = '';
            } else {
                item.classList.add('filtered-out');
                item.style.display = 'none';
            }
        });
        
        // Reset search results display
        document.querySelector('.faq-not-found').classList.add('hidden');
        
        // Re-apply search if there's text in the search box
        const searchInput = document.getElementById('faqSearch');
        if (searchInput.value.trim() !== '') {
            searchFAQ();
        }
    }
</script>

