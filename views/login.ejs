<%- include('./partials/header') %>
<body>
    <div class="container">
        <form action="/login" method="POST" class="auth-form" id="loginForm">
            <h1>Login</h1>
            
            <div id="loginAlert" class="alert hidden"></div>
            
            <div class="form-group">
                <label for="epost">Email</label>
                <input type="email" id="epost" name="epost" placeholder="Enter your email" required>
            </div>
            
            <div class="form-group">
                <label for="passord">Password</label>
                <input type="password" id="passord" name="passord" placeholder="Enter your password" required>
            </div>
            
            <button type="submit" class="btn-login" id="loginButton">
                <span>Login</span>
                <div class="spinner hidden" id="loginSpinner"></div>
            </button>
            
            <div class="auth-links">
                Don't have an account? <a href="/register">Register here</a>
            </div>
        </form>
    </div>
    
    <style>
        .auth-form {
            max-width: 450px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #ddd;
        }
        
        .btn-login {
            background-color: #2196F3;
            margin-top: 10px;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .auth-links {
            margin-top: 20px;
            text-align: center;
            color: #aaa;
        }
        
        /* Spinner styles */
        .spinner {
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
            margin-left: 10px;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .hidden {
            display: none;
        }
        
        .alert {
            padding: 10px 15px;
            border-radius: 4px;
            margin-bottom: 20px;
            color: white;
            background-color: #f44336;
        }
        
        .alert.warning {
            background-color: #ff9800;
        }
        
        .alert.info {
            background-color: #2196F3;
        }
    </style>
    
    <script>
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault(); // Prevent default form submission
            
            // Show spinner and disable button
            const loginButton = document.getElementById('loginButton');
            const loginSpinner = document.getElementById('loginSpinner');
            const buttonText = loginButton.querySelector('span');
            const loginAlert = document.getElementById('loginAlert');
            
            // Reset any previous alerts
            loginAlert.textContent = '';
            loginAlert.classList.add('hidden');
            
            buttonText.textContent = 'Logging in...';
            loginSpinner.classList.remove('hidden');
            loginButton.disabled = true;
            
            const formData = new FormData(this);
            
            // Set a timeout to show a message if the login takes too long
            const timeoutTimer = setTimeout(() => {
                loginAlert.textContent = 'Login is taking longer than expected. Please wait...';
                loginAlert.classList.remove('hidden');
                loginAlert.classList.add('info');
            }, 2000);
            
            // Convert FormData to a plain object
            const formDataObject = {};
            formData.forEach((value, key) => {
                formDataObject[key] = value;
            });
            
            // Fetch API for form submission - use JSON instead of FormData
            fetch('/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify(formDataObject),
                credentials: 'same-origin'
            })
            .then(response => {
                clearTimeout(timeoutTimer);
                
                // Check if we got a redirect response
                if (response.redirected) {
                    console.log("Redirect detected to:", response.url);
                    window.location.href = response.url;
                    return null;
                }

                // For non-redirect responses, try to parse JSON
                if (response.ok) {
                    return response.json().catch(() => {
                        // If parsing JSON fails but response was OK, just redirect to profile
                        console.log("Response OK but not JSON, redirecting to profile");
                        window.location.href = '/profile';
                        return null;
                    });
                } else {
                    // Handle error responses
                    return response.text().then(text => {
                        let errorMsg = 'Login failed';
                        try {
                            const data = JSON.parse(text);
                            errorMsg = data.message || 'Login failed. Please check your credentials.';
                        } catch (e) {
                            // If not JSON, use the text as the error message
                            errorMsg = text || 'Login failed. Please check your credentials.';
                        }
                        throw new Error(errorMsg);
                    });
                }
            })
            .then(data => {
                // Only execute if we have data and haven't redirected yet
                if (data) {
                    console.log("Login successful, redirecting to:", data.redirectUrl);
                    window.location.href = data.redirectUrl || '/profile';
                }
            })
            .catch(error => {
                // Only show error if it's not a redirect
                if (error.message !== 'Redirect') {
                    console.error("Login error:", error);
                    
                    clearTimeout(timeoutTimer);
                    loginAlert.textContent = error.message || 'An unexpected error occurred';
                    loginAlert.classList.remove('hidden', 'info');
                    loginAlert.classList.add('warning');
                    
                    buttonText.textContent = 'Login';
                    loginSpinner.classList.add('hidden');
                    loginButton.disabled = false;
                }
            });
        });
    </script>
</body>
</html>